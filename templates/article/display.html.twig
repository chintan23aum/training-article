{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div >
        <h1>Welcome</h1>

        <div class="example-wrapper">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    {% set isActive = 0 == category_id %}
                    <a class="nav-link {{ isActive ? ' active' }}" aria-current="page" href="{{ path('app_home') }}">All</a>
                </li>
                {% for category in categories %}
                    {% set isActive = category.id == category_id %}
                    <li class="nav-item">
                        <a class="nav-link {{ isActive ? ' active' }}" href="{{ path('app_home_articlelist',{'id': category.id}) }}">{{ category }}</a>
                    </li>
                {% endfor %}
            </ul>
            <div class="mt-4">
                <h1>{{ article.title }}</h1>
                <p>{{ article.description|raw }}</p>
                <p><small>{{ article.tags }}</small></p>
                <div class="col-12 row">
                    <div class="col-3 row">
                        <a class="btn btn-block btn-primary" href="{{ path('app_article_like',{'id': article.id}) }}"><i class="fa fa-thumbs-up">Like</i></a>
                    </div>
                    <div class="col-9">
                        Total Like Count: {{ likecount }}
                    </div>
                </div>
            </div>

        </div>



    </div>
{% endblock %}
