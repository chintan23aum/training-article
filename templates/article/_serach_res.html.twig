<div class="mt-4">
    {% if articles is empty %}
    <p>No records found!</p>
    {% else %}
        {% for article in articles %}
            <h5>{{ article.title }}</h5>
            <p><small>{{ article.tags }}</small></p>
            <p>{{ article.description|raw }}.. <a href="{{ path('app_article_display',{'id': article.id}) }}">Read More</a></p>
            <hr>
        {% endfor %}
    {% endif %}
</div>
